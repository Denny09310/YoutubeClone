<div class="flex flex-col">
    <img src="@Thumbnail.Url" height="@Thumbnail.Height" class="rounded-md aspect-video" />
    <div class="pt-2 inline-flex items-center gap-2">
        <Avatar ImageUrl="@DemoImageUrl" />
        <h3 class="font-bold truncate">@Title</h3>
    </div>
    <div class="pl-10 inline-flex items-center">
        <span class="text-xs text-gray-500">
            @ChannelTitle
            <i class="fa fa-check-circle ml-1" />
        </span>
    </div>
</div>

@code {
    private const string DemoImageUrl = "https://yt3.googleusercontent.com/wg1TITEoPfxvBGfzuqWyt3bqm_qu35ZhMswUv3feetU3xNX_6wsAXZF40OlPIgY4TmqbqCmAZ1U=s176-c-k-c0x00ffffff-no-rj";

    [Parameter]
    public Item<ChannelVideoId> Item { get; set; } = default!;

    public Default Thumbnail => Item.Snippet!.Thumbnails.High;
    public string Title => Item.Snippet!.Title;
    public string ChannelTitle => Item.Snippet!.ChannelTitle;
}
